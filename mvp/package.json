{
  "name": "uiux-standard-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "UI/UX Standard MVP - Cross-platform enterprise application reference implementation",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:mobile": "turbo dev --filter=mobile",
    "dev:desktop": "pnpm --filter desktop dev",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:desktop": "pnpm --filter desktop build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean"
  },
  "packageManager": "pnpm@10.30.0",
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.17"
    }
  },
  "devDependencies": {
    "turbo": "^2.8.10"
  }
}
