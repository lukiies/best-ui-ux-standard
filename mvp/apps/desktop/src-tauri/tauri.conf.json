{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UIUX Standard Desktop",
  "version": "0.1.0",
  "identifier": "com.uiux-standard.desktop",
  "build": {
    "beforeDevCommand": "cd ../../web && pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "node ../../../scripts/build-desktop-frontend.js",
    "frontendDist": "../../web/out"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "UI/UX Standard \u2014 Enterprise Platform",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3000 https://* tauri://localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://*; font-src 'self' data: https://*"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
